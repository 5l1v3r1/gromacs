% leftmargin, topmargin, textwidth, textheight, 
%   headheight, headsep, footheight, footskip
\def\setmargins#1#2#3#4#5#6#7#8{%
	\margin@offset
	\advance\oddsidemargin	#1
	\advance\evensidemargin	\paperwidth	% = paperwidth - left
	\advance\evensidemargin	-#1		%	- width
	\advance\evensidemargin	-#3
	\advance\topmargin	#2
	\textwidth	#3
	\textheight	#4
	\headheight	#5
	\headsep	#6
	\footheight	#7
	\footskip	#8
	\relax
}

% leftmargin, topmargin, rightmargin, bottommargin, 
%   headheight, headsep, footheight, footskip
\def\setmarginsrb#1#2#3#4#5#6#7#8{%
	\margin@offset
	\textwidth	\paperwidth	% = paperwidth - left - right
	\advance\textwidth	-#1
	\advance\textwidth	-#3
	\textheight	\paperheight	% = paperheight - top
	\advance\textheight	-#2	%	- headheight - headsep
	\advance\textheight	-#5	%	- footskip - bottom
	\advance\textheight	-#6
	\advance\textheight	-#8
	\advance\textheight	-#4
	\advance\oddsidemargin	#1
	\advance\evensidemargin	\paperwidth	% = paperwidth - left
	\advance\evensidemargin	-#1		%	- width
	\advance\evensidemargin	-\textwidth
	\advance\topmargin	#2
	\headheight	#5
	\headsep	#6
	\footheight	#7
	\footskip	#8
	\relax
}


