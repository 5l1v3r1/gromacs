#!/bin/csh

setenv HTML	$GMXHOME/html
if ( ! -d $HTML ) mkdir $HTML
setenv	INDEX	$HTML/index.html
cat > $INDEX << EOD
<title>Gromacs Programs</title>
<h3>Gromacs Programs</h3>
<ul>
EOD

cd 	$GMXHOME/bin/$CPU
foreach i ( * )
if ( -x $i ) then
$i -man 2
if ( -f $i.html ) then 
mv $i.html $GMXHOME/html
cat >> $INDEX << EOK
<li><a href="$i.html">$i</a>
EOK
endif
endif
end

cat >> $INDEX << EOM
</ul>
<a href="http://rugmd0.chem.rug.nl/~gmx">Gromacs Homepage</a>
EOM

echo Point your browser to file://$INDEX
echo And set a bookmark for further reference
