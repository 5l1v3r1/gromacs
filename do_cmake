
export CMAKE_PREFIX_PATH=${HOME}/software
if [[ ! -d $CMAKE_PREFIX_PATH ]]; then
  export CMAKE_PREFIX_PATH=/opt/local
fi
export LIBRARY_PATH="${CMAKE_PREFIX_PATH}/lib64"
if [[ ! -d $LIBRARY_PATH ]]; then
  export LIBRARY_PATH="${CMAKE_PREFIX_PATH}/lib"
fi
export LDFLAGS="-L$LIBRARY_PATH"

export CMAKE_LIBRARY_PATH=$LIBRARY_PATH

cmake -v -DCMAKE_BUILD_TYPE:STRING=Debug -DGMX_DOUBLE:BOOL=ON -DGMX_MPI:BOOL=ON -DGMX_THREADS:BOOL=OFF -DCMAKE_INSTALL_PREFIX:STRING=${HOME}/software-alexandria -DGMX_CLN:BOOL=ON -DGMX_GSL:BOOL=OFF .

make -j 4 install

